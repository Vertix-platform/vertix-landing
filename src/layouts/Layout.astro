---
import { Toaster } from '@/components/ui/sonner';
import '../styles/global.css';
import { Font } from 'astro:assets';
import 'remixicon/fonts/remixicon.css'

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
}

const {
	title = "Vertix - Own, Trade, and Monetize Digital Identity",
	description = "Empowering gamers, creators, and digital entrepreneurs to control their digital assets. Join the future of digital identity with Vertix Market.",
	image = "/og-image.jpg",
	canonical = Astro.url.href,
} = Astro.props;
---

<Font cssVariable="--font-space-grotesk" preload />

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="manifest" href="/manifest.json" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content="digital identity, NFT marketplace, gaming, creators, blockchain, digital assets, trading platform" />
		<meta name="author" content="Vertix" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={canonical} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />
		<meta property="og:site_name" content="Vertix" />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonical} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />
		<meta name="twitter:creator" content="@vertix_market" />

		<!-- Additional SEO -->
		<meta name="theme-color" content="#000000" />
		<meta name="msapplication-TileColor" content="#000000" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

		<!-- Preconnect to external domains -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Vertix",
			"url": "https://vertix.market",
			"logo": "https://vertix.market/logo.png",
			"description": "Empowering gamers, creators, and digital entrepreneurs to control their digital assets.",
			"sameAs": [
				"https://x.com/vertix_market"
			],
			"contactPoint": {
				"@type": "ContactPoint",
				"contactType": "customer service",
				"availableLanguage": "English"
			}
		})} />
	</head>
	<body>
		<slot />
		<Toaster client:load />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: var(--font-space-grotesk);
		box-sizing: border-box;
		background-color: var(--color-background);
	}
</style>
