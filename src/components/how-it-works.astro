---
// src/components/sections/HowItWorks.astro
import { MotionDiv } from "./ui/motion";
import { CustomGrid } from "./custom/custom-grid";

const steps = [
  {
    icon: "ri-search-line",
    title: "Browse Assets",
    description: "Explore a wide variety of digital assets available on the Vertix marketplace."
  },
  {
    icon: "ri-add-line",
    title: "Create an Account",
    description: "For sellers, sign up, connect your wallet and verify* for a Vertix account to start selling digital assets and build trust."
  },
  {
    icon: "ri-wallet-line",
    title: "Connect your wallet",
    description: "For buyers, only connect your wallet to the Vertix platform to start buying assets."
  },
  {
    icon: "ri-arrow-left-right-line",
    title: "Buy and Sell",
    description: "Easily buy and sell assets using our intuitive interface and secure transaction process."
  }
];
---

<section id="how-it-works" class="py-16 px-4 lg:px-8" aria-labelledby="how-it-works-heading">
  <div class="">
    <MotionDiv
      client:visible
      className="text-center mb-16"
      initial="hidden"
      whileInView="visible"
      viewport={{ once: true, amount: 0.5 }}
      variants={{
        hidden: { opacity: 0, y: 50 },
        visible: { opacity: 1, y: 0 }
      }}
      transition={{ duration: 0.5 }}
    >
      <h2 id="how-it-works-heading" class="text-4xl md:text-5xl font-bold text-white mb-6">How It Works</h2>
    </MotionDiv>

    <CustomGrid items={steps} showSteps={true} client:load />
  </div>
</section>