---
import { MotionDiv } from "./ui/motion";
import { FeaturesGrid } from "./custom/FeaturesGrid";

const features = [
  {
    icon: "ri-code-s-slash-line",
    title: "Hybrid blockchain technology",
    description: "Vertix leverages a hybrid blockchain technology, combining the strengths of Polygon and Base for enhanced performance and scalability."
  },
  {
    icon: "ri-magic-line",
    title: "Creator NFTs",
    description: "Mint unique, verifiable NFTs representing your digital creations."
  },
  {
    icon: "ri-shield-check-line",
    title: "Secure Trading",
    description: "Ensure secure transactions with our escrow system."
  },
  {
    icon: "ri-file-lock-line",
    title: "Blockchain + API Verification",
    description: "Verify assets using our API and blockchain technology."
  }
];
---

<section class="py-20 px-4 lg:px-8" aria-labelledby="features-heading">
  <div class="">
    <MotionDiv
      client:visible
      className="text-center mb-16"
      initial="hidden"
      whileInView="visible"
      viewport={{ once: true, amount: 0.5 }}
      variants={{
        hidden: { opacity: 0, y: 50 },
        visible: { opacity: 1, y: 0 }
      }}
      transition={{ duration: 0.8, ease: "easeOut" }}
    >
      <h2 id="features-heading" class="text-4xl md:text-5xl font-bold text-white mb-6">Key Features</h2>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">Discover what makes Vertix the ultimate platform for digital identity management</p>
    </MotionDiv>

    <FeaturesGrid features={features} client:load />
  </div>
</section>

<style>
  .expanded {
    z-index: 10;
  }
</style>