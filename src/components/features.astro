---
import { MotionDiv } from "./ui/motion";
import { FeaturesGrid } from "./custom/FeaturesGrid";

const features = [
  {
    icon: "ri-code-s-slash-line",
    title: "Hybrid blockchain technology",
    description: "Vertix uses a hybrid blockchain technology, combining the strengths of Polygon and Base for enhanced performance and scalability."
  },
  {
    icon: "ri-magic-line",
    title: "Creator NFTs",
    description: "Your work, your rules. Turn your music, art, or social media profile into NFTs that live on the blockchain, trackable, sellable, and earning you royalties every time they change hands."
  },
  {
    icon: "ri-shield-check-line",
    title: "Secure Trading",
    description: "No banks. No shady middlemen. Just smart contracts and escrow systems that auto-lock trades until both sides do their part, making transactions fast, fair, and fraud-proof."
  },
  {
    icon: "ri-file-lock-line",
    title: "Blockchain + API Verification",
    description: "Is it real? Our API says yes. We verify the authenticity of products and store that truth forever on the blockchain, no edits, no erasing, no lies."
  }
];
---

<section class="py-20 px-4 lg:px-8" aria-labelledby="features-heading">
  <div class="">
    <MotionDiv
      client:visible
      className="text-center mb-16"
      initial="hidden"
      whileInView="visible"
      viewport={{ once: true, amount: 0.5 }}
      variants={{
        hidden: { opacity: 0, y: 50 },
        visible: { opacity: 1, y: 0 }
      }}
      transition={{ duration: 0.8, ease: "easeOut" }}
    >
      <h2 id="features-heading" class="text-4xl md:text-5xl font-bold text-white mb-6">Key Features</h2>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">Discover what makes Vertix the ultimate platform for digital identity management</p>
    </MotionDiv>

    <FeaturesGrid features={features} client:load />
  </div>
</section>

<style>
  .expanded {
    z-index: 10;
  }
</style>